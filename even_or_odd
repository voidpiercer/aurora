def my_function(a):
    if a % 2 == 0:
        return True
    else:
        return False
    
while True:
    try:
        value = (input("Enter a Number: "))
        if value == "x":
            print("Exiting...")
            break
        else:
            boolo = int(value)
            print((my_function(boolo)))
            # break
        
    except ValueError as e:
        print(e)
